        cog.outl("  config." + section + "." + option + ".bg = wcs2colour(L\"" + default_value[1] + "\");")
        cog.outl("  config." + section + "." + option + ".bold = wcs2bool(L\"" + default_value[2] + "\");")
        cog.outl("  config." + section + "." + option + ".pair = " + str(pair) + ";")
        pair += 1
