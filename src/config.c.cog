// Error function for `eini()`
void error_handler(const wchar_t *error, const char *path,
                   const unsigned line) {
  wchar_t errmsg[BS_SHORT]; // error message

  swprintf(errmsg, BS_SHORT,
           L"Error in %s line %d: %ls",
           path, line, error);
  winddown(ES_CONFIG_ERROR, errmsg);
}

